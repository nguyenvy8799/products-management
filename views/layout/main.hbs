  <script>
    // Xu ly redirect den trang chi tiet danh muc
    $(function () {
      $(".tm-category-name").on(
        "click",
        function (event) {
          const categoryId = event.target.getAttribute("data-category-id");
          window.location.href = `/products/category/${categoryId}`;
        }
      );
    });
  </script>
</body>

